<div class="row">
    <div class="col-md-6 mx-auto mt-5">
        <div class="card">
            <div class="card-header">
              <h3>New User Register <i class="fas fa-user-plus"></i></h3> 
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" name="name" placeholder="Fernando" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="email" placeholder="fer@gmail.com" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" placeholder="fernandito54" value="{{password}}">
                    </div>
                    <div class="form-group">
                        <label for="confirm-password">Confirm Password</label>
                        <input type="password" class="form-control" name="confirm_password" placeholder="Same Password" value="{{confirm_password}}">
                    </div>
                    <button class="btn btn-primary btn-block ">
                        Sign Up
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>